# Production Environment Configuration for TranscriptionBot
# Copy this file to /var/www/TranscriptionBot/.env and fill in your values

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=production
DEBUG=False

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Admin IDs (comma-separated, no spaces)
ADMIN_IDS=1222173292,928883166

# Drop pending updates on startup (True/False)
DROP_PENDING_UPDATES=False

# Support and developer chat IDs
SUPPORT_CHAT_ID=
DEVELOPER_CHAT_ID=

# ============================================
# BOT API SERVER (Optional - for files > 20MB)
# ============================================
# Leave empty to use standard Telegram Bot API (20MB limit)
# Set to your Bot API server URL for 100MB file support
BOT_API_SERVER=

# ============================================
# WEB APPLICATION
# ============================================
WEB_APP_URL=https://transcription.avlo.ai
WEB_SECRET_KEY=change_this_to_a_long_random_string

# ============================================
# DJANGO CONFIGURATION
# ============================================
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=change_this_to_a_long_random_django_secret_key
ALLOWED_HOSTS=transcription.avlo.ai,www.transcription.avlo.ai

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=transcription_bot
DB_USER=transcription_user
DB_PASSWORD=your_secure_database_password_here

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# AI SERVICE (Gemini)
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# File size limits
MAX_AUDIO_DURATION_SECONDS=3600
MAX_VIDEO_DURATION_SECONDS=1800
MAX_FILE_SIZE_MB=100

# ============================================
# PAYMENT GATEWAYS
# ============================================
# PayMe
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_SECRET_KEY=your_payme_secret_key
PAYME_TEST_MODE=False

# Click
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SERVICE_ID=your_click_service_id
CLICK_SECRET_KEY=your_click_secret_key
CLICK_TEST_MODE=False

# ============================================
# PRICING CONFIGURATION
# ============================================
AUDIO_PRICE_PER_MIN=100.0
VIDEO_PRICE_PER_MIN=150.0
INITIAL_BALANCE=1000.0
MIN_PAYMENT_AMOUNT=1000.0
MAX_PAYMENT_AMOUNT=1000000.0

# ============================================
# RATE LIMITING
# ============================================
THROTTLE_TIME_WINDOW=60
THROTTLE_MAX_MESSAGES=10
THROTTLE_MAX_MEDIA=3

# ============================================
# LOCALIZATION
# ============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,uz

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ============================================
# CORS SETTINGS
# ============================================
CORS_ALLOWED_ORIGINS=https://transcription.avlo.ai

# ============================================
# MAINTENANCE MODE
# ============================================
MAINTENANCE_MODE=False

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True
